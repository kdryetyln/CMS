@model IEnumerable<CMS.Common.Models.Menu.MenuDto>

<!-- BEGIN SAMPLE TABLE PORTLET-->
<div class="portlet">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-magic"></i>My Menus
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
            <a href="javascript:;" class="reload" data-original-title="" title=""> </a>

        </div>
    </div>
    <div class="portlet-body" style="display: block;">
        <div class="table-scrollable">
            <table class="table table-striped table-bordered table-advance table-hover">
                <thead>
                    <tr>
                        <th style="width:20%">
                            <i class="fa fa-th-list"></i> Menus
                        </th>
                        <th class="hidden-xs" style="width:25%">
                            <i class="fa fa-trash"></i> Remove
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="highlight">
                                <div class="success"></div>
                                <a href="javascript:;" onclick="GetSubItem(@item.MenuId)"> @item.MenuName </a>
                                <input type="hidden" pageID="@item.PageId" />
                            </td>
                            <td>
                                <a onclick="Remove(@item.MenuId)">
                                    <i class="fa fa-minus-circle" style="color:red"></i>
                                </a>                               
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
